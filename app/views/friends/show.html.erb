<div class="container mx-auto">
  <div class="bg-gray-200 px-8 p-16 w-full rounded">
    <p id="notice"><%= notice %></p>

    <div class="w-full flex items-center justify-center md:justify-start mb-4">
      <p class="text-5xl font-normal mr-2 text-gray-700">
        <%= @friend.first_name %>
        <%= @friend.last_name %>
      </p>
    </div>

    <div class="w-full flex items-center justify-center mb-4 text-base text-gray-600 md:text-lg md:justify-start">
      <p class="mr-2">
        <%= @friend.email %> |
        <%= @friend.phone %> |
        <%= @friend.twitter %>
      </p>
    </div>

    <div class="border-t border-solid border-gray-400 mb-8"></div>

    <div class=" w-full md:flex md:items-center md:w-1/5">
      
      <%= link_to 'Edit', edit_friend_path(@friend), class: " block text-center p-2 w-full mx-auto rounded bg-gray-500 mr-2 mb-2 text-white text-sm md:mb-0 hover:bg-gray-600 focus:outline-none focus:outline-none" %>

      <%= link_to 'Back', friends_path, class: "block text-center p-2 w-full mx-auto rounded bg-gray-700 text-white text-sm hover:bg-gray-800 focus:outline-none" %>
    </div>
  </div>
</div>
