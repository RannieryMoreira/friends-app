<p id="notice"><%= notice %></p>

<div class="container mx-auto">
  <h1 class="text-2xl w-full text-gray-700 my-4 text-center md:w-auto md:text-left">Friends</h1>
  <div class="w-full overflow-x-auto mb-4">
    <table class="w-full border-collapse rows border border-solid border-gray-300">
      <thead class="border-t border-b border-gray-300 border-solid text-left text-xs bg-gray-700 text-white lg:text-sm">
        <tr>
          <th class="px-8 py-2.5">First name</th>
          <th class="px-8 py-2.5">Last name</th>
          <th class="px-8 py-2.5">Email</th>
          <th class="px-8 py-2.5">Phone</th>
          <th class="px-8 py-2.5">Twitter</th>
          <th colspan="3" class="px-8 py-2.5"></th>
        </tr>
      </thead>

      <tbody class="border-t border-b border-gray-300 border-solid text-left text-black text-xs lg:text-sm">
        <% @friends.each do |friend| %>
          <tr class="border-t border-b border-gray-300 border-solid2 text-left">
            <td class="px-8 py-2.5"><%= friend.first_name %></td>
            <td class="px-8 py-2.5"><%= friend.last_name %></td>
            <td class="px-8 py-2.5"><%= friend.email %></td>
            <td class="px-8 py-2.5"><%= friend.phone %></td>
            <td class="px-8 py-2.5"><%= friend.twitter %></td>
            <td class="px-8 py-2.5"><%= link_to 'Show', friend, class: "text-blue-500 font-bold hover:text-blue-600"%></td>
            <td class="px-8 py-2.5"><%= link_to 'Edit', edit_friend_path(friend), class: "text-blue-500 font-bold hover:text-blue-600" %></td>
            <td class="px-8 py-2.5"><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-blue-500 font-bold hover:text-blue-600" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

    <%= link_to 'New Friend', new_friend_path, class: "block w-full mx-auto text-center text-xs py-2 rounded bg-gray-700 text-white lg:mx-0 lg:text-sm lg:ml-auto lg:w-1/6 hover:bg-gray-800" %>
</div>