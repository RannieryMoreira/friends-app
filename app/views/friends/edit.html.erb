<div class="container mx-auto">
    <h1 class="text-2xl w-full text-gray-700 my-4 text-center md:w-auto md:text-left">Editing Friend</h1>

    <%= render 'form', friend: @friend %>

    <div class="flex items-center w-full lg:w-1/6">
        <%= link_to 'Show', @friend, class: "block text-center p-2 w-full mx-auto rounded bg-gray-500 text-white text-sm lg:mr-2 hover:bg-gray-600 focus:outline-none" %>
        <%= link_to 'Back', friends_path, class: "block text-center p-2 w-full mx-auto rounded bg-gray-700 text-white text-sm hover:bg-gray-800 focus:outline-none" %>
    </div>
</div>
